<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        app:strokeColor="?secondary_text_color"
        app:cardBackgroundColor="?colorPrimary"
        app:strokeWidth="0.5dp"
        app:contentPadding="8dp"
        app:cardCornerRadius="4dp"
        app:cardElevation="0.5dp"
        android:minHeight="50dp"
        android:maxHeight="200dp"
        android:layout_margin="4dp"
        android:layout_height="wrap_content">
    <LinearLayout android:layout_width="match_parent"
                  android:orientation="vertical"
                  android:layout_height="wrap_content">


    <RelativeLayout
            android:layout_gravity="center_vertical"
            android:gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
        <TextView
                android:id="@+id/textView"
                android:text="Title"
                android:layout_alignParentStart="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                style="@style/TaskTitleCard"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="18dp"/>
        <FrameLayout
                android:id="@+id/task_card_status_frame"
                android:layout_width="wrap_content"
                android:background="?selectableItemBackgroundBorderless"
                android:layout_alignParentEnd="true"
                android:layout_centerVertical="true"
                android:layout_alignTop="@+id/textView"
                android:layout_alignBottom="@+id/textView"
                android:layout_height="wrap_content">

            <ImageView
                    android:clickable="false"
                    android:id="@+id/task_card_status_image"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:srcCompat="@drawable/ic_task_active"/>

        </FrameLayout>

    </RelativeLayout>
        <LinearLayout
                android:orientation="vertical"
                android:id="@+id/sub_tasks_ll"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">


        <TextView android:layout_width="wrap_content"
                  style="@style/SubTaskHeader"
                  android:text="4 Subtasks"
                  android:drawableRight="@drawable/ic_expand_more_16dp"
                  android:layout_height="wrap_content"/>
        <LinearLayout
                android:paddingStart="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <include layout="@layout/layout_sub_task"/>
                <include layout="@layout/layout_sub_task"/>
                <include layout="@layout/layout_sub_task"/>
        </LinearLayout>
        </LinearLayout>


    </LinearLayout>

</com.google.android.material.card.MaterialCardView>