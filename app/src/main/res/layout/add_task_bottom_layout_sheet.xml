<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_gravity="bottom"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:context=".ui.MainActivity">
    <androidx.core.widget.NestedScrollView
            app:layout_behavior="com.google.android.material.appbar.AppBarLayout$ScrollingViewBehavior"
            android:layout_width="match_parent"
            android:padding="10dp"
            android:layout_height="wrap_content">
        <LinearLayout android:layout_width="match_parent"
                      android:orientation="vertical"
                      android:layout_height="match_parent">


            <EditText
                    android:id="@+id/edit_word"
                    android:clipToPadding="true"
                    android:paddingBottom="76dp"
                    android:paddingStart="8dp"
                    android:paddingEnd="8dp"
                    android:paddingTop="16dp"
                    android:inputType="textCapSentences|textMultiLine"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="25sp"
                    android:padding="20dp"
                    android:background="@null"
                    android:textColor="?primary_text_color"
                    android:hint="@string/hint_enter_task_name"
                    android:lineSpacingExtra="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:autofillHints="">

            </EditText>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
            >
                <LinearLayout
                        android:padding="8dp"
                        android:weightSum="2"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <androidx.cardview.widget.CardView
                            app:cardElevation="1dp"
                            app:cardCornerRadius="4dp"
                            app:cardBackgroundColor="?colorPrimary"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            android:layout_height="80dp">
                        <LinearLayout
                                android:layout_margin="8dp"
                                android:orientation="vertical"
                                android:layout_gravity="center_vertical"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            <ImageView
                                android:clickable="false"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                app:srcCompat="@drawable/ic_notifications_24dp"/>
                            <TextView
                                    android:text="Add Notification"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/TaskTitleCard"
                                    android:fontFamily="@font/roboto_light"/>


                        </LinearLayout>
                    </androidx.cardview.widget.CardView>

                    <androidx.cardview.widget.CardView
                        app:cardCornerRadius="4dp"
                        android:layout_marginStart="8dp"
                        app:cardElevation="1dp"
                        app:cardBackgroundColor="?colorPrimary"
                        android:layout_weight="1"
                        android:layout_width="0dp"
                        android:layout_height="80dp">
                        <LinearLayout
                                android:layout_margin="8dp"
                                android:orientation="vertical"
                                android:gravity="center"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">

                            <ImageView
                                    android:clickable="false"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@drawable/ic_due_date_24dp"/>
                            <TextView
                                    android:text="Add Due Date"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    style="@style/TaskTitleCard"
                                    android:fontFamily="@font/roboto_light"/>


                        </LinearLayout>
                </androidx.cardview.widget.CardView>

                </LinearLayout>

                <androidx.cardview.widget.CardView
                        android:id="@+id/bt_add_task"
                        android:layout_width="match_parent"
                        app:strokeColor="@color/delete_red"
                        app:cardBackgroundColor="@color/done_task"
                        app:strokeWidth="2dp"
                        app:contentPadding="8dp"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="0.5dp"
                        android:minHeight="50dp"
                        android:layout_marginTop="24dp"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:maxHeight="200dp"
                        android:foreground="?selectableItemBackgroundBorderless"
                        android:layout_height="wrap_content">

                    <TextView
                            android:id="@+id/text_view_add_or_update"
                            android:text="ADD"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TaskTitleCard"
                            android:textColor="@color/primary_color_dark"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="18dp"
                            android:fontFamily="@font/roboto_light"/>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                        android:visibility="gone"
                        android:id="@+id/bt_delete_task"
                        android:layout_width="match_parent"
                        app:cardBackgroundColor="?colorPrimary"
                        app:contentPadding="8dp"
                        app:cardCornerRadius="4dp"
                        app:cardElevation="0.5dp"
                        android:minHeight="50dp"
                        android:layout_marginTop="24dp"
                        android:maxHeight="200dp"
                        android:foreground="?selectableItemBackgroundBorderless"
                        android:layout_height="wrap_content">

                    <TextView
                            android:text="DELETE"
                            android:layout_gravity="center"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/TaskTitleCard"
                            android:textColor="@color/delete_red"
                            android:layout_alignParentEnd="true"
                            android:layout_marginEnd="18dp"
                            android:fontFamily="@font/roboto_light"/>

                </androidx.cardview.widget.CardView>
            </LinearLayout>
        </LinearLayout>


    </androidx.core.widget.NestedScrollView>


</androidx.coordinatorlayout.widget.CoordinatorLayout>